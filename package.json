{
  "name": "waifu-bot",
  "description": "Waifu Bot is multipurpose Discord Bot with Music that serves our server",
  "repository": "https://github.com/Leomotors/waifu-bot",
  "version": "0.0.0",
  "private": true,
  "workspaces": [
    "apps/*",
    "packages/*"
  ],
  "scripts": {
    "postinstall": "prisma generate",
    "clean": "rm -rf node_modules {apps,packages}/**/*/{.turbo,build,dist,node_modules,.next}",
    "build": "FORCE_COLOR=2 turbo run build --parallel",
    "build:sync": "FORCE_COLOR=2 turbo run build --concurrency=1",
    "dev": "FORCE_COLOR=2 turbo run dev --parallel",
    "lint": "FORCE_COLOR=2 turbo run lint --parallel",
    "format": "FORCE_COLOR=2 turbo run format --parallel",
    "start": "FORCE_COLOR=2 turbo run start --parallel",
    "test": "FORCE_COLOR=2 turbo run test --parallel"
  },
  "devDependencies": {
    "@nestjs/cli": "^9.1.5",
    "@prisma/client": "^4.7.1",
    "prettier": "^2.8.1",
    "prisma": "^4.7.1",
    "prisma-nestjs-graphql": "^17.0.3",
    "turbo": "^1.6.3",
    "typescript": "^4.9.4"
  },
  "engines": {
    "node": "^18.12.0",
    "pnpm": "^7"
  }
}